# Get compiler and flags
get_filename_component(SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(${SELF_DIR}/darma_interop.cmake)
include(${SELF_DIR}/darma.cmake)

set (darma_frontend_DIR @darma_frontend_DIR@)
find_package(darma_frontend)

SET (DARMA_FIND_OPENMP @BACKEND_USE_OPENMP@)
if (DARMA_FIND_OPENMP)
find_package(OpenMP REQUIRED)
endif()

SET (DARMA_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
if (NOT DARMA_CXX_COMPILER STREQUAL CMAKE_CXX_COMPILER)
message(FATAL_ERROR "DARMA requires the same compiler be used: ${DARMA_CXX_COMPILER} used for backend, but ${CMAKE_CXX_COMPILER} used for application")
endif()


